---
import HeaderLink from './HeaderLink.astro';
import PWKeepLogo from './PWKeepLogo.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="brand">
			<PWKeepLogo size={40} class="logo" />
			<h2><a href="/">PWKeep</a></h2>
		</div>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="#premium-sync">Premium</HeaderLink>
			<HeaderLink href="/install">Install</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="cta-links">
			<a href="#premium-sync" class="btn btn-outline">Premium</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0.25em 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}

	.brand {
		display: flex;
		align-items: center;
		gap: 0.25rem;
	}

	.logo {
		margin-right: 0.1rem;
	}

	h2 {
		margin: 0;
		font-size: 1.25rem;
		font-weight: 700;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--primary);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	nav a {
		padding: 0.15em 0.6em;
		color: rgb(var(--black));
		text-decoration: none;
		border-radius: 4px;
		transition: all 0.3s ease;
		font-weight: 500;
	}

	nav a:hover {
		background: rgba(var(--accent-rgb), 0.1);
		color: var(--accent);
	}

	nav a.active {
		background: var(--accent);
		color: white;
		font-weight: 600;
	}

	.cta-links {
		display: flex;
		align-items: center;
	}

	.btn-outline {
		background: transparent;
		border: 1px solid var(--accent);
		color: var(--accent);
		padding: 0.15rem 0.6rem;
		border-radius: 4px;
		text-decoration: none;
		font-weight: 600;
		font-size: 0.85rem;
		transition: all 0.3s ease;
	}

	.btn-outline:hover {
		background: var(--accent);
		color: white;
	}

	@media (max-width: 720px) {
		.cta-links {
			display: none;
		}

		.internal-links {
			display: none;
		}
	}
</style>
