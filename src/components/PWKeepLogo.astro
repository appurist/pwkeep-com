---
interface Props {
  size?: number;
  class?: string;
}

const { size = 32, class: className = '' } = Astro.props;

// Choose the best favicon size based on requested size
let logoSrc = '/favicon-32x32.png';
if (size <= 16) {
  logoSrc = '/favicon-16x16.png';
} else if (size <= 32) {
  logoSrc = '/favicon-32x32.png';
} else if (size <= 192) {
  logoSrc = '/android-chrome-192x192.png';
} else {
  logoSrc = '/android-chrome-512x512.png';
}
---

<img
  src={logoSrc}
  alt="PWKeep Logo"
  width={size}
  height={size}
  class={className}
/>

<style>
  img {
    display: inline-block;
    vertical-align: middle;
  }
</style>
